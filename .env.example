
# Database Connection (Supabase/PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/db?schema=public"

# App Configuration
PORT=3000
APP_URL="https://your-app-url.com"

# Shopify Integration
# Retrieve these from your Shopify Partners Dashboard
SHOPIFY_API_KEY="your_shopify_client_id"
SHOPIFY_API_SECRET="your_shopify_client_secret"
SHOPIFY_SCOPES="read_customers"
HOST="your-app-url.com" # Host without https://

# Security
# Must be exactly 32 (random) characters
# Generate with: openssl rand -hex 32 (returns 64 chars, take first 32 or use raw bytes properly encoded)
# Or just a 32-char string.
ENCRYPTION_KEY="12345678901234567890123456789012"
